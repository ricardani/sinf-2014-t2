<div class="alert alert-danger alert-dismissible" role="alert" ng-if="loginForm.loginFailure">
    <b>D'oh!</b> Failed to log in!
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
</div>
<div class="text-center">
    <h1>Delivery Company </h1>
    <br>
    <form class="form-horizontal" ng-submit="login()">
        <div class="form-group">
            <h2>Email</h2>
            <div class="col-xs-offset-2 col-sm-offset-3 col-md-offset-4 col-sm-6 col-md-4">
                <input class="input-md form-control" type="email" id="email" ng-model="loginForm.emailAddress" placeholder="Email" >
            </div>
        </div>
        <div class="form-group">
            <h2>Password</h2>
            <div class="col-xs-offset-2 col-sm-offset-3 col-md-offset-4  col-xs-8 col-sm-6 col-md-4">
                <input class="input-md form-control" type="password" id="password" ng-model="loginForm.password" placeholder="Password" >
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input type="checkbox" ng-model="loginForm.rememberMe"> Lembrar-me
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" href="#/list_orders" class="btn btn-default btn-lg">Entrar</button>
        </div>
    </form>
</div>
